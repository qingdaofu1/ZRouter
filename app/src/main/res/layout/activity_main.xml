<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="这个是应用1111111111111" />

    <Button
        android:id="@+id/btn_jump_app2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{handlers::onClickFriend}"
        android:text="jump to 2" />

    <Button
        android:id="@+id/btn_getweather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_jump_app2"
        android:layout_marginTop="20dp"
        android:text="getWeather" />

    <Button
        android:id="@+id/btn_getsinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_getweather"
        android:layout_marginTop="20dp"
        android:text="getSinger" />

</RelativeLayout>